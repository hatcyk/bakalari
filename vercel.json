{
  "functions": {
    "index.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-notifications",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/lesson-reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/prefetch",
      "schedule": "*/15 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ]
}
